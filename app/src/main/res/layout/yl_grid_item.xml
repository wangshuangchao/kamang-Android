<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="32px"
        android:paddingBottom="16px"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_tutx"
            android:layout_width="340px"
            android:layout_height="340px"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_nmae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="10px"
            android:layout_below="@+id/img_tutx"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_marginTop="22px"
            android:textColor="#333333"
            android:textSize="28px"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px">
            <TextView
                android:id="@+id/tv_jiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24px"
                android:textColor="#fd5353"
                android:textSize="30px"/>

            <TextView
                android:id="@+id/tv_homebg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:background="@drawable/img_normal_shape6"
                android:layout_marginRight="24px"
                android:text="点击购买"
                android:textSize="22px"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
