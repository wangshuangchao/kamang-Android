<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/activity_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@mipmap/tu_bg1">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="86px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20px"
                android:layout_height="38px"
                android:layout_marginLeft="24px"
                android:layout_centerVertical="true"
                android:background="@mipmap/fanhui"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="企业认证"
            android:textSize="32px"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="28px"
                    android:layout_height="28px"
                    android:layout_marginLeft="24px"
                    android:background="@mipmap/rwzl"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="基本资料"
                    android:textSize="30px"
                    android:textColor="#ff962c"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82px"
                android:background="@drawable/img_normal_shape12"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:layout_marginTop="40px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36px"
                    android:layout_height="34px"
                    android:layout_marginLeft="32px"
                    android:background="@mipmap/sh"/>

                <EditText
                    android:id="@+id/e_gsname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:paddingLeft="8px"
                    android:padding="24px"
                    android:background="@null"
                    android:hint="公司名称"
                    android:textColorHint="#888888"
                    android:textSize="28px"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82px"
                android:background="@drawable/img_normal_shape12"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:layout_marginTop="60px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36px"
                    android:layout_height="34px"
                    android:layout_marginLeft="32px"
                    android:background="@mipmap/zh"/>

                <EditText
                    android:id="@+id/e_faren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:paddingLeft="8px"
                    android:padding="24px"
                    android:background="@null"
                    android:hint="法人/负责人姓名"
                    android:textColorHint="#888888"
                    android:textSize="28px"
                    android:textColor="#333333"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82px"
                android:background="@drawable/img_normal_shape12"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:layout_marginTop="60px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36px"
                    android:layout_height="42px"
                    android:layout_marginLeft="32px"
                    android:background="@mipmap/sfz"/>

                <EditText
                    android:id="@+id/e_farensfzh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:padding="24px"
                    android:background="@null"
                    android:hint="法人/负责人身份证号"
                    android:textColorHint="#888888"
                    android:textSize="28px"
                    android:textColor="#333333"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="24px"
                android:layout_marginTop="40px"
                android:background="@color/hui"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="28px"
                    android:layout_height="28px"
                    android:layout_marginLeft="24px"
                    android:background="@mipmap/yyzz"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="营业执照"
                    android:textSize="30px"
                    android:textColor="#ff962c"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_yyzz"
                android:layout_width="240px"
                android:layout_height="240px"
                android:layout_marginTop="40px"
                android:layout_marginLeft="24px"
                android:background="@mipmap/yyzztu"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="24px"
                android:layout_marginTop="40px"
                android:background="@color/hui"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="28px"
                    android:layout_height="28px"
                    android:layout_marginLeft="24px"
                    android:background="@mipmap/sfztu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="身份证"
                    android:textSize="30px"
                    android:textColor="#ff962c"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="40px">
                <ImageView
                    android:id="@+id/img_sfzzm"
                    android:layout_width="320px"
                    android:layout_height="240px"
                    android:layout_marginLeft="24px"
                    android:background="@mipmap/sfzzm"/>
                <ImageView
                    android:id="@+id/img_sfzfm"
                    android:layout_width="320px"
                    android:layout_height="240px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24px"
                    android:background="@mipmap/sfzfm"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/ing_xieyi"
                    android:layout_width="41px"
                    android:layout_height="41px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17px"
                    android:padding="5px">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_xieyi"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_xy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:layout_centerInParent="true"
                    android:text="我已阅读并同意咔芒隐私策略"
                    android:textSize="28px"
                    android:textColor="#666666"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:layout_gravity="center"
                android:background="@drawable/img_normal_shape6"
                android:layout_marginTop="60px"
                android:layout_marginBottom="40px"
                android:text="提交"
                android:textSize="34px"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
