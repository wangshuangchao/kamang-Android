<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui"
    android:orientation="vertical">

    <include
        layout="@layout/activity_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@mipmap/tu_bg1">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="86px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20px"
                android:layout_height="38px"
                android:layout_marginLeft="24px"
                android:layout_centerVertical="true"
                android:background="@mipmap/fanhui"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我最喜爱的名片评选活动"
            android:textSize="32px"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bcbcbc"
        android:layout_below="@+id/rl1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_yoliao"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:layout_marginLeft="24px"
                        android:background="@mipmap/yl_sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28px"
                        android:text="上传名片，赢扫地机器人"
                        android:textSize="28px"
                        android:textColor="#333333"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="542px"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="24px"
                    android:text="【我的故事】"
                    android:textSize="28px"
                    android:textColor="#333333"/>

                <RelativeLayout
                    android:id="@+id/rl_content"
                    android:layout_width="match_parent"
                    android:layout_height="400px"
                    android:layout_marginLeft="24px"
                    android:layout_marginRight="24px"
                    android:layout_marginTop="32px"
                    android:padding="24px"
                    android:background="@color/hui">
                    <EditText
                        android:id="@+id/e_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:lineSpacingExtra="10px"
                        android:minHeight="400px"
                        android:gravity="top"
                        android:hint="@string/wdgs"
                        android:textSize="30px"
                        android:textColorHint="#999999"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/tv_shu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:text="0/300"
                        android:textSize="24px"
                        android:textColor="#999999"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="24px"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="28px"
                    android:text="【我的名片】"
                    android:textSize="28px"
                    android:textColor="#333333"/>
                <ImageView
                    android:id="@+id/img_tump"
                    android:layout_width="280px"
                    android:layout_height="280px"
                    android:layout_marginLeft="24px"
                    android:layout_marginTop="32px"
                    android:layout_marginBottom="32px"
                    android:background="@mipmap/mpzp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_canyu"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:layout_gravity="center"
                android:background="@drawable/img_normal_shape6"
                android:layout_marginTop="60px"
                android:layout_marginBottom="40px"
                android:text="提交"
                android:textSize="34px"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
