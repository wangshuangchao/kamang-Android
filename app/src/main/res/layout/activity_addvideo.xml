<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui"
    android:orientation="vertical">

    <include
        layout="@layout/activity_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@mipmap/tu_bg1">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="86px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20px"
                android:layout_height="38px"
                android:layout_marginLeft="24px"
                android:layout_centerVertical="true"
                android:background="@mipmap/fanhui"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加视频"
            android:textSize="32px"
            android:textColor="@color/white"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450px"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_fmvoide"
            android:layout_width="match_parent"
            android:layout_height="410px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_centerVertical="true"
            android:background="@mipmap/fmzs"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450px"
        android:background="@color/white"
        android:layout_marginTop="24px">
        <ImageView
            android:id="@+id/img_voide"
            android:layout_width="match_parent"
            android:layout_height="410px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_centerVertical="true"
            android:background="@mipmap/spzs"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:text="视频上传进度：0 %"
        android:textSize="26px"
        android:textColor="@color/he"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_addvideo"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="80px"
        android:background="@drawable/img_normal_shape9"
        android:text="提交"
        android:textSize="34px"
        android:textColor="@color/white"/>

</LinearLayout>
