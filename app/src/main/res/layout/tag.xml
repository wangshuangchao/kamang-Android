<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tag_checked_pressed"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <com.mugua.enterprise.util.widget.TagView
        android:id="@+id/tagview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawablePadding="5.0dip"
        android:minHeight="0.0dip"
        android:minWidth="0.0dip"
        android:paddingBottom="4.5dip"
        android:paddingTop="4.5dip"
        android:textColor="#333333"
        android:textSize="30px" />

    <TextView
        android:id="@+id/tv_del"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginRight="5dip"
        android:background="@drawable/forum_tag_close"
        android:visibility="gone"/>

</LinearLayout>