<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/activity_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@mipmap/tu_bg1">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="86px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20px"
                android:layout_height="38px"
                android:layout_marginLeft="24px"
                android:layout_centerVertical="true"
                android:background="@mipmap/fanhui"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="编辑资料"
            android:textSize="32px"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="24px"
        android:background="@color/hui"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:text="企业LOGO"
            android:textSize="30px"
            android:textColor="#333333"/>

        <com.mugua.enterprise.util.CircleImageView
            android:id="@+id/img_tu"
            android:layout_width="130px"
            android:layout_height="130px"
            android:layout_marginRight="32px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_jiantou"
            android:src="@mipmap/mr_tx"/>

        <ImageView
            android:id="@+id/img_jiantou"
            android:layout_width="21px"
            android:layout_height="39px"
            android:layout_marginRight="24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/me_jt"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="24px"
        android:background="@color/hui"/>

    <RelativeLayout
        android:id="@+id/rl_editnc"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:text="企业名称"
            android:textSize="30px"
            android:textColor="#333333"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_nc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24px"
                android:textSize="30px"
                android:textColor="#666666"/>
            <ImageView
                android:layout_width="21px"
                android:layout_height="39px"
                android:layout_marginRight="24px"
                android:background="@mipmap/me_jt"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="@color/hui"/>

    <RelativeLayout
        android:id="@+id/rl_edith"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:text="所属行业"
            android:textSize="30px"
            android:textColor="#333333"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_hangye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24px"
                android:textSize="30px"
                android:textColor="#666666"/>
            <ImageView
                android:layout_width="21px"
                android:layout_height="39px"
                android:layout_marginRight="24px"
                android:background="@mipmap/me_jt"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hui"/>

</LinearLayout>
