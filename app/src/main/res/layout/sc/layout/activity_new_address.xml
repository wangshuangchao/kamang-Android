<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui"
    android:orientation="vertical">
    <include
        layout="@layout/activity_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@mipmap/tu_bg1">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="86px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20px"
                android:layout_height="38px"
                android:layout_marginLeft="24px"
                android:layout_centerVertical="true"
                android:background="@mipmap/fanhui"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增地址"
            android:textSize="32px"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hui"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:paddingLeft="24px"
                android:paddingRight="24px"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="姓名"
                    android:textSize="30px"
                    android:textColor="#333333"/>

                <EditText
                    android:id="@+id/e_name"
                    android:layout_width="500px"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical|right"
                    android:layout_alignParentRight="true"
                    android:hint="请填写"
                    android:textColorHint="#999999"
                    android:textSize="30px"
                    android:textColor="#333333"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:background="@color/white"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:paddingLeft="24px"
                    android:paddingRight="24px"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/tv_sjh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="手机号"
                        android:textSize="30px"
                        android:textColor="#333333"/>

                    <EditText
                        android:id="@+id/e_sjh"
                        android:layout_width="500px"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_vertical|right"
                        android:layout_alignParentRight="true"
                        android:hint="请填写"
                        android:textColorHint="#999999"
                        android:textSize="30px"
                        android:textColor="#333333"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="24px"
                    android:layout_marginRight="24px"
                    android:background="@color/hui"/>

                <RelativeLayout
                    android:id="@+id/rl_order"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:paddingLeft="24px"
                    android:paddingRight="24px"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="地址"
                        android:textSize="30px"
                        android:textColor="#333333"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="24px"
                            android:text="请选择"
                            android:textSize="26px"
                            android:textColor="#999999"/>
                        <ImageView
                            android:layout_width="21px"
                            android:layout_height="39px"
                            android:background="@mipmap/me_jt"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="24px"
                    android:layout_marginRight="24px"
                    android:background="@color/hui"/>

                <RelativeLayout
                    android:id="@+id/rl_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24px"
                    android:background="@color/white">
                    <EditText
                        android:id="@+id/e_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:lineSpacingExtra="10px"
                        android:minHeight="200px"
                        android:gravity="top"
                        android:hint="请输入详细地址"
                        android:textSize="30px"
                        android:textColorHint="#999999"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:paddingLeft="24px"
                android:paddingRight="24px"
                android:layout_marginTop="24px"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_yb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="邮编"
                    android:textSize="30px"
                    android:textColor="#333333"/>

                <EditText
                    android:id="@+id/e_yb"
                    android:layout_width="500px"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical|right"
                    android:layout_alignParentRight="true"
                    android:hint="请填写"
                    android:textColorHint="#999999"
                    android:textSize="30px"
                    android:textColor="#333333"/>
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/btn_bc"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:background="@drawable/btn_delete_address"
            android:text="保存地址"
            android:textSize="30px"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>
