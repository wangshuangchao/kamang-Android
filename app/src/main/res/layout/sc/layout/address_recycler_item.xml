<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_mr"
        android:layout_width="60px"
        android:layout_height="60px"
        android:background="@mipmap/moren"/>

    <ImageView
        android:id="@+id/checkBox"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24px"
        android:background="@drawable/btn_xieyi"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ll_zs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ll_bj"
        android:layout_toRightOf="@+id/checkBox"
        android:paddingTop="40px"
        android:paddingBottom="40px"
        android:paddingLeft="32px"
        android:layout_marginRight="32px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马老师"
                android:textSize="30px"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="15634895648"
                android:textSize="30px"
                android:textColor="#333333"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_jianjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="10px"
            android:layout_marginTop="32px"
            android:text="马老师"
            android:textSize="28px"
            android:textColor="#333333"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bj"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">
        <View
            android:id="@+id/view_x"
            android:layout_width="2px"
            android:layout_height="60px"
            android:background="#999999"/>
        <RelativeLayout
            android:id="@+id/btn_bj"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_centerVertical="true"
                android:layout_marginRight="32px"
                android:layout_marginLeft="32px"
                android:background="@mipmap/bianji"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="24px"
        android:layout_below="@+id/ll_zs"
        android:background="@color/hui"/>

</RelativeLayout>
