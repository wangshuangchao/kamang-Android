<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui"
    android:orientation="vertical">

    <include
        layout="@layout/activity_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@mipmap/tu_bg1">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="86px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20px"
                android:layout_height="38px"
                android:layout_marginLeft="24px"
                android:layout_centerVertical="true"
                android:background="@mipmap/fanhui"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textSize="32px"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_zhifutiao"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24px"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总价："
                    android:textSize="30px"
                    android:textColor="#333333"/>
                <TextView
                    android:id="@+id/tv_zj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0"
                    android:textSize="30px"
                    android:textColor="#ff5050"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_zhifu"
                android:layout_width="260px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#ff962c"
                android:gravity="center"
                android:text="付款"
                android:textSize="34px"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_zhifutiao">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/hui"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/btn_shdz"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/img_tu1"
                        android:layout_width="36px"
                        android:layout_height="48px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24px"
                        android:background="@mipmap/dz_tu"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/img_tu1"
                        android:layout_toLeftOf="@+id/img_tu2"
                        android:layout_marginLeft="32px"
                        android:layout_marginRight="24px"
                        android:gravity="center_vertical"
                        android:text="请填写收货地址"
                        android:textSize="32px"
                        android:textColor="#333333"/>

                    <ImageView
                        android:id="@+id/img_tu2"
                        android:layout_width="21px"
                        android:layout_height="39px"
                        android:layout_marginRight="24px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/me_jt"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_zs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ll_zczs"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:background="@color/white"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="36px"
                            android:layout_height="48px"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="24px"
                            android:background="@mipmap/dz_tu"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="32px"
                            android:layout_marginRight="24px"
                            android:gravity="center_vertical"
                            android:text="收货地址"
                            android:textSize="32px"
                            android:textColor="#333333"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/hui"
                        android:layout_marginLeft="24px"
                        android:layout_marginRight="24px"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ll_bj"
                        android:paddingTop="40px"
                        android:paddingBottom="40px"
                        android:paddingLeft="32px"
                        android:layout_marginRight="32px"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="30px"
                                android:textColor="#333333"/>

                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40px"
                                android:textSize="30px"
                                android:textColor="#333333"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_jianjie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:lineSpacingExtra="10px"
                            android:layout_marginTop="32px"
                            android:textSize="28px"
                            android:textColor="#333333"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="260px"
                    android:background="@color/white"
                    android:layout_marginTop="32px"
                    android:paddingTop="40px"
                    android:paddingBottom="40px"
                    android:paddingRight="24px"
                    android:paddingLeft="24px"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/sp_tu"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:background="@mipmap/zwt"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_spname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40px"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:lineSpacingExtra="10px"
                            android:text="请填写收货地址"
                            android:textSize="28px"
                            android:textColor="#333333"/>
                        <TextView
                            android:id="@+id/tv_jiage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/ll_shuliang"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="40px"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="￥0"
                            android:textSize="34px"
                            android:textColor="#ff5050"/>
                        <LinearLayout
                            android:id="@+id/ll_shuliang"
                            android:layout_width="wrap_content"
                            android:layout_height="70px"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:id="@+id/img_jian"
                                android:layout_width="70px"
                                android:layout_height="match_parent"
                                android:background="@mipmap/sp_jian"/>
                            <EditText
                                android:id="@+id/e_shu"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:focusable="false"
                                android:clickable="true"
                                android:digits="0123456789"
                                android:background="@drawable/img_normal_shape23"
                                android:minWidth="90px"
                                android:gravity="center"
                                android:text="1"
                                android:textSize="28px"
                                android:textColor="#333333"/>
                            <ImageView
                                android:id="@+id/img_jia"
                                android:layout_width="70px"
                                android:layout_height="match_parent"
                                android:background="@mipmap/sp_jia"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="322px"
                    android:background="@color/white"
                    android:layout_marginTop="32px"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_zhifuw"
                        android:layout_width="match_parent"
                        android:layout_height="160px"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/img_tu3"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="24px"
                            android:background="@mipmap/weixinzf"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/img_tu3"
                            android:layout_marginLeft="32px"
                            android:layout_marginRight="24px"
                            android:gravity="center_vertical"
                            android:text="微信支付"
                            android:textSize="30px"
                            android:textColor="#333333"/>

                        <ImageView
                            android:id="@+id/img_xieyiw"
                            android:layout_width="40px"
                            android:layout_height="40px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="24px"
                            android:background="@drawable/btn_xieyi"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/hui"
                        android:layout_marginRight="24px"
                        android:layout_marginLeft="24px"/>

                    <RelativeLayout
                        android:id="@+id/rl_zhifuf"
                        android:layout_width="match_parent"
                        android:layout_height="160px"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/img_tu4"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="24px"
                            android:background="@mipmap/zhifubaozf"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/img_tu4"
                            android:layout_marginLeft="32px"
                            android:layout_marginRight="24px"
                            android:gravity="center_vertical"
                            android:text="支付宝支付"
                            android:textSize="30px"
                            android:textColor="#333333"/>

                        <ImageView
                            android:id="@+id/img_xieyif"
                            android:layout_width="40px"
                            android:layout_height="40px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="24px"
                            android:background="@drawable/btn_xieyi"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>
