<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_marginBottom="40px"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_tutx"
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_marginLeft="24px"
            android:layout_centerVertical="true"
            android:src="@mipmap/tu3"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240px"
            android:layout_toRightOf="@+id/img_tutx">

            <TextView
                android:id="@+id/tv_ddname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="10px"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:text="圣诞节撒谎登记卡莎舒服撒即可财富海南都是废话"
                android:textColor="#333333"
                android:textSize="28px"/>

            <TextView
                android:id="@+id/tv_ddjg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:layout_alignParentBottom="true"
                android:text="￥1000"
                android:textColor="#fd5353"
                android:textSize="30px"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="#e9e9e9"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24px">
        <TextView
            android:id="@+id/tv_ddbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="已上架"
            android:textColor="#333333"
            android:textSize="28px"/>
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_normal_shape21"
            android:padding="15px"
            android:text="删除"
            android:textColor="#333333"
            android:textSize="24px"/>

        <TextView
            android:id="@+id/tv_editor"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tv_delete"
            android:layout_marginRight="24px"
            android:background="@drawable/img_normal_shape21"
            android:padding="15px"
            android:text="编辑"
            android:textColor="#333333"
            android:textSize="24px"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_x"
        android:layout_width="match_parent"
        android:layout_height="24px"
        android:background="@color/hui"/>

</LinearLayout>
