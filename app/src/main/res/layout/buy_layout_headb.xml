<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:openxu="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230px"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_broken"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@mipmap/home_mingdan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="失信名单"
                android:textSize="26px"
                android:textColor="#333333"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_funds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@mipmap/home_zijin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="补充资金"
                android:textSize="26px"
                android:textColor="#333333"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_kucun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@mipmap/home_kucun"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="我有库存"
                android:textSize="26px"
                android:textColor="#333333"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@mipmap/home_mingpian"/>

            <TextView
                android:id="@+id/tv_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="创建名片"
                android:textSize="26px"
                android:textColor="#333333"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="24px"
            android:background="@color/hui"/>
        <ImageView
            android:id="@+id/img_1"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:background="@mipmap/home_dongtait"/>

        <View
            android:id="@+id/view_3"
            android:layout_width="2px"
            android:layout_height="80px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:layout_toRightOf="@+id/img_1"
            android:background="#bcbcbc"/>

        <com.mugua.enterprise.util.LimitScrollerView
            android:id="@+id/limitScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:layout_marginRight="24px"
            android:layout_toRightOf="@+id/view_3"
            openxu:limit="1"
            openxu:durationTime="1200"
            openxu:periodTime="2000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="24px"
            android:background="@color/hui"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="38px"
            android:layout_height="44px"
            android:layout_marginTop="32px"
            android:layout_marginLeft="24px"
            android:background="@mipmap/rm"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="24px"
            android:text="重点关注"
            android:textSize="30px"
            android:textColor="#333333"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/white"/>
</LinearLayout>
