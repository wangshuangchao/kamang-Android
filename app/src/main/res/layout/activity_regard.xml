<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:layout_below="@+id/view_1"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="86px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20px"
                android:layout_height="38px"
                android:layout_marginLeft="24px"
                android:layout_centerVertical="true"
                android:background="@mipmap/btn_jt"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关于"
            android:textSize="32px"
            android:textColor="#ff8e4a"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#e9e9e9"/>

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginTop="180px"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/guanyu_tu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:layout_gravity="center_horizontal"
        android:text="咔芒"
        android:textSize="34px"
        android:textColor="#ff962c"/>

    <TextView
        android:id="@+id/tv_edition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_gravity="center_horizontal"
        android:text="版本号：V1.0（最新版本）"
        android:textSize="28px"
        android:textColor="#666666"/>

    <Button
        android:id="@+id/btn_yinsi"
        android:layout_width="600px"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300px"
        android:background="@drawable/img_normal_shape9"
        android:text="隐私策略"
        android:textSize="34px"
        android:textColor="@color/white"/>

</LinearLayout>
